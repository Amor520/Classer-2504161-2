<%- include('partials/header') %>

<div class="container main-container">
  <div class="row justify-content-center my-5">
    <div class="col-md-6">
      <div class="card border-0 shadow-sm">
        <div class="card-header bg-primary text-white">
          <h5 class="card-title mb-0"><i class="bi bi-shield-lock"></i> 活动管理权限验证</h5>
        </div>
        <div class="card-body p-4">
          <div class="text-center mb-4">
            <div class="auth-icon mb-3">
              <i class="bi bi-key display-1 text-primary opacity-75"></i>
            </div>
            <h4>请输入管理员密码</h4>
            <p class="text-muted">添加或修改活动需要管理员权限</p>
          </div>
          
          <% if (error) { %>
            <div class="alert alert-danger mb-4">
              <i class="bi bi-exclamation-triangle-fill"></i> <%= error %>
            </div>
          <% } %>
          
          <form action="/activity/auth" method="post">
            <div class="mb-4">
              <label for="password" class="form-label">管理员密码</label>
              <div class="input-group">
                <span class="input-group-text"><i class="bi bi-lock"></i></span>
                <input type="password" class="form-control" id="password" name="password" required>
              </div>
            </div>
            
            <div class="d-grid gap-2">
              <button type="submit" class="btn btn-primary">
                <i class="bi bi-unlock"></i> 验证权限
              </button>
              <a href="/" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> 返回首页
              </a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %> 