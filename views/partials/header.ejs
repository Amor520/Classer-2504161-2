<!DOCTYPE html>
<html lang="zh-CN">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="renderer" content="webkit">
  <title><%= typeof title !== 'undefined' ? title : '计算机2308班' %> - 计算机2308班</title>
  
  <!-- 预加载和DNS预解析，加速资源加载 -->
  <link rel="dns-prefetch" href="https://cdn.bootcdn.net">
  <link rel="preload" href="/css/style.css" as="style">
  
  <!-- 使用国内CDN - BootCDN -->
  <link href="https://cdn.bootcdn.net/ajax/libs/twitter-bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.bootcdn.net/ajax/libs/bootstrap-icons/1.10.0/font/bootstrap-icons.css">
  <link rel="stylesheet" href="https://cdn.bootcdn.net/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="/css/tech-theme.css">
  
  <!-- 异步加载非关键JS资源 -->
  <script src="https://cdn.bootcdn.net/ajax/libs/chart.js/3.9.1/chart.min.js" async defer></script>
  <script src="https://cdn.bootcdn.net/ajax/libs/particles.js/2.0.0/particles.min.js" async defer></script>
  <script src="/js/sorting.js" defer></script>
  <script src="/js/tech-effects.js" defer></script>
  
  <!-- 字体使用国内CDN，使用swap确保文字先显示 -->
  <link href="https://fonts.loli.net/css2?family=Noto+Sans+SC:wght@400;500;700&display=swap" rel="stylesheet" media="print" onload="this.media='all'">
  <noscript><link href="https://fonts.loli.net/css2?family=Noto+Sans+SC:wght@400;500;700&display=swap" rel="stylesheet"></noscript>
</head>
<body>
  <!-- 粒子背景 -->
  <div id="particles-js" class="particles-background"></div>
  
  <!-- 导航栏 -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top shadow-sm">
    <div class="container main-container">
      <a class="navbar-brand" href="/"><i class="bi bi-pc-display"></i> 计算机2308班</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" 
              aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav me-auto">
          <!-- 主导航项 -->
          <li class="nav-item">
            <a class="nav-link <%= typeof active !== 'undefined' && active === 'class-home' ? 'active' : '' %>" href="/"><i class="bi bi-house"></i> 班级主页</a>
          </li>
          <li class="nav-item">
            <a class="nav-link <%= typeof active !== 'undefined' && active === 'forms-home' ? 'active' : '' %>" href="/forms"><i class="bi bi-clipboard-data"></i> 收集表系统</a>
          </li>
          <li class="nav-item">
            <a class="nav-link <%= typeof active !== 'undefined' && active === 'home' ? 'active' : '' %>" href="/deyufen"><i class="bi bi-trophy"></i> 德育分系统</a>
          </li>
          <li class="nav-item">
            <a class="nav-link <%= typeof active !== 'undefined' && active === 'draw' ? 'active' : '' %>" href="/draw"><i class="bi bi-shuffle"></i> 抽签系统</a>
          </li>
          
          <!-- 动态导航栏：德育分系统相关 -->
          <% if (typeof active !== 'undefined' && ['home', 'overview', 'activities', 'ranking', 'student', 'activity'].includes(active)) { %>
            <li class="nav-item">
              <a class="nav-link <%= typeof active !== 'undefined' && active === 'overview' ? 'active' : '' %>" href="/overview"><i class="bi bi-card-checklist"></i> 德育分总览</a>
            </li>
            <li class="nav-item">
              <a class="nav-link <%= typeof active !== 'undefined' && active === 'ranking' ? 'active' : '' %>" href="/ranking"><i class="bi bi-bar-chart"></i> 德育分排名</a>
            </li>
            <li class="nav-item">
              <a class="nav-link <%= typeof active !== 'undefined' && active === 'activities' ? 'active' : '' %>" href="/activities"><i class="bi bi-list-ul"></i> 所有活动</a>
            </li>
            <% if (typeof session !== 'undefined' && session.admin) { %>
              <li class="nav-item">
                <a class="nav-link <%= typeof active !== 'undefined' && active === 'activity_add' ? 'active' : '' %>" href="/activity/add"><i class="bi bi-plus-circle"></i> 添加活动</a>
              </li>
            <% } %>
          <% } %>
          
          <!-- 动态导航栏：收集表系统相关 -->
          <% if (typeof active !== 'undefined' && ['forms', 'forms-home', 'forms-active', 'forms-submissions', 'forms-recent', 'all-forms', 'create-form', 'view-form', 'form-results'].includes(active)) { %>
            <li class="nav-item">
              <a class="nav-link <%= typeof active !== 'undefined' && active === 'forms-active' ? 'active' : '' %>" href="/forms/active"><i class="fas fa-clipboard-check"></i> 活跃表单</a>
            </li>
            <li class="nav-item">
              <a class="nav-link <%= typeof active !== 'undefined' && active === 'all-forms' ? 'active' : '' %>" href="/forms/all"><i class="fas fa-list-ul"></i> 所有表单</a>
            </li>
            <% if (typeof session !== 'undefined' && session.admin) { %>
              <li class="nav-item">
                <a class="nav-link <%= typeof active !== 'undefined' && active === 'create-form' ? 'active' : '' %>" href="/forms/create"><i class="fas fa-plus-circle"></i> 创建表单</a>
              </li>
            <% } %>
            <li class="nav-item">
              <a class="nav-link <%= typeof active !== 'undefined' && active === 'forms-submissions' ? 'active' : '' %>" href="/forms/submissions"><i class="fas fa-inbox"></i> 提交记录</a>
            </li>
          <% } %>
          
          <!-- 动态导航栏：抽签系统相关 -->
          <% if (typeof active !== 'undefined' && active === 'draw') { %>
            <li class="nav-item">
              <a class="nav-link" href="/draw"><i class="bi bi-people"></i> 抽签池</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/draw#history"><i class="bi bi-clock-history"></i> 抽签历史</a>
            </li>
          <% } %>
        </ul>
        
        <!-- 右侧导航项 -->
        <ul class="navbar-nav">
          <!-- 管理员选项 -->
          <% if (typeof session !== 'undefined' && session.admin) { %>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                <i class="bi bi-shield-lock"></i> 
                <%= session.admin.username %> 
                <span class="badge <%= session.admin.role === 2 ? 'bg-danger' : 'bg-primary' %>">
                  <%= session.admin.role === 2 ? '超管' : '管理员' %>
                </span>
              </a>
              <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="adminDropdown">
                <li><a class="dropdown-item" href="/admin/dashboard"><i class="bi bi-speedometer2"></i> 管理员仪表板</a></li>
                <% if (session.admin.role === 2) { %>
                  <li><a class="dropdown-item" href="/admin/manage"><i class="bi bi-people"></i> 管理员管理</a></li>
                <% } %>
                <li><hr class="dropdown-divider"></li>
                <li><a class="dropdown-item" href="/admin/logout"><i class="bi bi-box-arrow-right"></i> 退出登录</a></li>
              </ul>
            </li>
          <% } else { %>
            <li class="nav-item">
              <a class="nav-link" href="/admin/login"><i class="bi bi-shield-lock"></i> 管理员登录</a>
            </li>
          <% } %>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container mt-4 d-none">
    <div class="page-header mb-4">
      <h1><%= typeof title !== 'undefined' ? title : '计算机2308班' %></h1>
    </div>
  </div>

  <!-- 系统消息显示区域 -->
  <% if (typeof message !== 'undefined' && message) { %>
    <div class="container mt-5 pt-3">
      <div class="alert alert-<%= message.type %> alert-dismissible fade show" role="alert">
        <%= message.text %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    </div>
  <% } %>
  
  <!-- 面包屑导航 -->
  <% if (typeof breadcrumbs !== 'undefined' && breadcrumbs && breadcrumbs.length > 0) { %>
  <div class="container mt-5 pt-3">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/"><i class="bi bi-house"></i> 首页</a></li>
        <% breadcrumbs.forEach((item, index) => { %>
          <% if (index === breadcrumbs.length - 1) { %>
            <li class="breadcrumb-item active" aria-current="page"><%= item.text %></li>
          <% } else { %>
            <li class="breadcrumb-item"><a href="<%= item.url %>"><%= item.text %></a></li>
          <% } %>
        <% }); %>
      </ol>
    </nav>
  </div>
  <% } %>

  <!-- 内容容器开始 -->
  <div class="content-wrapper">
</body>
</html> 