<%- include('../partials/header') %>

<!-- 内容区域容器 -->
<div class="container main-container">
  <!-- 欢迎区域 -->
  <div class="jumbotron mb-4 p-4 p-md-5 bg-light rounded-3 text-center position-relative overflow-hidden welcome-banner">
    <div class="position-absolute top-0 start-0 w-100 h-100 welcome-banner-bg"></div>
    <div class="position-relative">
      <h1 class="display-5 fw-bold text-success">收集表系统</h1>
      <p class="lead">计算机科学与技术专业 2308班 2023级</p>
      <div class="d-flex justify-content-center gap-3 mt-4 flex-wrap">
        <a href="/forms/all" class="btn btn-success px-4">
          <i class="bi bi-list-ul"></i> 所有表单
        </a>
        <a href="/forms/create" class="btn btn-outline-success px-4">
          <i class="bi bi-plus-circle"></i> 创建表单
        </a>
        <a href="/forms/submissions" class="btn btn-outline-success px-4">
          <i class="bi bi-inbox"></i> 提交记录
        </a>
      </div>
    </div>
  </div>

  <!-- 数据概览卡片 -->
  <div class="row mb-4 stats-overview">
    <div class="col-md-4 mb-3">
      <div class="card h-100 border-0 shadow-sm">
        <div class="card-body text-center">
          <div class="display-4 fw-bold text-success mb-2">
            <i class="bi bi-file-earmark-text"></i>
          </div>
          <h5 class="card-title">当前表单</h5>
          <p class="fs-4 fw-bold mb-0">0</p>
        </div>
      </div>
    </div>
    <div class="col-md-4 mb-3">
      <div class="card h-100 border-0 shadow-sm">
        <div class="card-body text-center">
          <div class="display-4 fw-bold text-info mb-2">
            <i class="bi bi-inbox"></i>
          </div>
          <h5 class="card-title">收集记录</h5>
          <p class="fs-4 fw-bold mb-0">0</p>
        </div>
      </div>
    </div>
    <div class="col-md-4 mb-3">
      <div class="card h-100 border-0 shadow-sm">
        <div class="card-body text-center">
          <div class="display-4 fw-bold text-warning mb-2">
            <i class="bi bi-people"></i>
          </div>
          <h5 class="card-title">参与人数</h5>
          <p class="fs-4 fw-bold mb-0">0</p>
        </div>
      </div>
    </div>
  </div>
      
  <div class="row">
    <!-- 活跃表单 -->
    <div class="col-lg-6 mb-4">
      <div class="card h-100 border-0 shadow-sm">
        <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
          <h5 class="card-title mb-0"><i class="bi bi-file-earmark-check"></i> 活跃表单</h5>
          <a href="/forms/all" class="btn btn-sm btn-outline-light">查看全部</a>
        </div>
        <div class="card-body">
          <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> 暂无活跃表单
          </div>
        </div>
      </div>
    </div>
    
    <!-- 最近提交 -->
    <div class="col-lg-6 mb-4">
      <div class="card h-100 border-0 shadow-sm">
        <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
          <h5 class="card-title mb-0"><i class="bi bi-clock-history"></i> 最近提交</h5>
          <a href="/forms/submissions" class="btn btn-sm btn-outline-light">查看所有提交</a>
        </div>
        <div class="card-body">
          <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> 暂无提交记录
          </div>
        </div>
      </div>
    </div>
  </div>
      
  <!-- 系统介绍 -->
  <div class="row mt-2">
    <div class="col-12">
      <div class="card border-0 shadow-sm">
        <div class="card-header bg-light">
          <h5 class="card-title mb-0"><i class="bi bi-info-circle"></i> 系统介绍</h5>
        </div>
        <div class="card-body py-4">
          <div class="row">
            <div class="col-md-4 mb-4">
              <div class="feature-item text-center p-3 h-100">
                <div class="feature-icon mb-3">
                  <i class="bi bi-pencil-square display-4 text-success"></i>
                </div>
                <h5>快速创建</h5>
                <p class="text-muted">轻松创建各类表单，支持多种题型和自定义选项</p>
              </div>
            </div>
            <div class="col-md-4 mb-4">
              <div class="feature-item text-center p-3 h-100">
                <div class="feature-icon mb-3">
                  <i class="bi bi-share display-4 text-info"></i>
                </div>
                <h5>便捷分享</h5>
                <p class="text-muted">生成链接或二维码，方便分享给班级成员填写</p>
              </div>
            </div>
            <div class="col-md-4 mb-4">
              <div class="feature-item text-center p-3 h-100">
                <div class="feature-icon mb-3">
                  <i class="bi bi-graph-up display-4 text-warning"></i>
                </div>
                <h5>数据统计</h5>
                <p class="text-muted">自动汇总数据，支持导出Excel进行深入分析</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  // 页面加载后初始化粒子背景
  document.addEventListener('DOMContentLoaded', function() {
    // 初始化粒子背景
    if (typeof particlesJS !== 'undefined') {
      particlesJS('particles-js', {
        particles: {
          number: { value: 80, density: { enable: true, value_area: 800 } },
          color: { value: '#198754' }, // 使用绿色主题
          shape: { type: 'circle' },
          opacity: { value: 0.5, random: false },
          size: { value: 3, random: true },
          line_linked: { enable: true, distance: 150, color: '#198754', opacity: 0.4, width: 1 },
          move: { enable: true, speed: 2, direction: 'none', random: false, straight: false, out_mode: 'out' }
        },
        interactivity: {
          detect_on: 'canvas',
          events: {
            onhover: { enable: true, mode: 'grab' },
            onclick: { enable: true, mode: 'push' },
            resize: true
          }
        }
      });
    }
  });
</script>

